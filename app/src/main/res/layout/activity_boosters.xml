<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/content_frame"
    android:background="@color/royalBlue"
    android:theme="@style/Theme.AppCompat"
    tools:context=".activities.StatisticsActivity">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/black"
            android:gravity="center"
            android:minHeight="56dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    </FrameLayout>

    <TextView
        android:id="@+id/timeWarpsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_frame"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Time Warps"
        android:textSize="20dp"
        android:textStyle="bold" />

    <GridView
        android:id="@+id/timeWarpGridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/timeWarpsText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:numColumns="2"
        android:textAlignment="center" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/adView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/adView"
            android:background="@color/darkerGray"
            android:gravity="center"
            android:text="X"
            android:textSize="24sp" />
    </RelativeLayout>

</android.widget.RelativeLayout>